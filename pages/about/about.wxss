.custom-nav {
  width: 100%;
  background: var(--color-bg-secondary);
  display: flex;
  align-items: flex-end;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 500;
  color: var(--color-text-primary);
  height: 44px;
  line-height: 44px;
  margin-left: 24rpx;
}

.container {
  min-height: 100vh;
  background: var(--color-bg-primary);
  padding: 0 24rpx;
}

/* 统计框样式 */
.stats-box {
  margin-top: 16rpx;
  padding: 32rpx 16rpx;
  background: var(--color-bg-secondary);
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-num {
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1;
  margin-bottom: 12rpx;
  color: var(--color-text-primary);
}

.stats-label {
  font-size:  24rpx;
  color: var(--color-text-quaternary);
}

/* 内容区域样式 */
.section {
  margin: 0;
  margin-top: 16rpx;
  width: 100%;
  background: var(--color-bg-secondary);
  padding: 32rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  box-shadow: var(--shadow);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  display: block;
}

.section-content {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
  text-align: justify;
  text-justify: inter-ideograph;
  word-break: break-all;
  display: block;
  width: 100%;
}

/* 使用说明列表样式 */
.guide-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.guide-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.guide-num {
  width: 40rpx;
  height: 40rpx;
  background: var(--color-bg-primary);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--color-text-tertiary);
}

.guide-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  text-align: justify;
  text-justify: inter-ideograph;
  word-break: break-all;
  flex: 1;
  display: block;
  padding-top: 6rpx;
}

/* 联系方式样式 */
.contact-list {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
}

.contact-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.contact-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
}

/* 底部样式 */
.footer {
  text-align: center;
  padding: 32rpx 0;
}

.footer text {
  font-size: 24rpx;
  color: var(--color-text-quaternary);
  display: block;
  margin-bottom: 8rpx;
}

/* 如果最后一个元素不需要底部间距 */
.footer text:last-child {
  margin-bottom: 0;
} 