.page {
  background: var(--color-bg-primary);
}

.custom-nav {
  width: 100%;
  background: var(--color-bg-secondary);
  display: flex;
  flex-direction: column;
  position: sticky;
  top: 0;
  left: 0;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 500;
  color: var(--color-text-primary);
  line-height: 1;
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  margin-bottom: 8rpx;
}

.container {
  min-height: 100vh;
  background: var(--color-bg-primary);
  padding: 0 24rpx;
}

/* 统计框样式 */
.stats-box {
  margin-top: 16rpx;
  padding: 32rpx 16rpx;
  background: var(--color-bg-secondary);
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-num {
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1;
  margin-bottom: 12rpx;
  color: var(--color-text-primary);
}

.stats-label {
  font-size: 24rpx;
  color: var(--color-text-quaternary);
}

/* 内容区域样式 */
.section {
  margin: 0;
  margin-top: 16rpx;
  width: 100%;
  background: var(--color-bg-secondary);
  padding: 32rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  box-shadow: var(--shadow);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  display: block;
}

.section-content {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
  text-align: justify;
  text-justify: inter-ideograph;
  word-break: break-all;
  display: block;
  width: 100%;
}

/* 使用说明列表样式 */
.guide-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.guide-item {
  display: flex;
}

.guide-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  text-align: justify;
  text-justify: inter-ideograph;
  word-break: break-all;
  flex: 1;
  display: block;
  line-height: 1.4;
}

/* 联系方式样式 */
.contact-list {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
}

.contact-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.contact-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
}

/* 底部样式 */
.footer {
  text-align: center;
  padding: 32rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: var(--color-text-quaternary);
  display: block;
  margin-bottom: 8rpx;
}

.footer-text:last-child {
  margin-bottom: 0;
}

/* 更新区域样式 */
.update-section {
  margin-top: 16rpx;
  padding: 24rpx;
}

.update-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.update-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  line-height: 1.4;
}

.version-line,
.time-line {
  display: flex;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
}

.label {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  flex-shrink: 0;
}

.value {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
}

.update-btn {
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  background: var(--color-text-primary);
  color: var(--color-bg-secondary);
  border-radius: 12rpx;
  border: none;
  width: fit-content;
  text-align: center;
  line-height: 1.4;
  margin: 0;
  box-sizing: content-box;
}

.update-btn::after {
  content: '';
  display: none;
}

/* 有更新时的按钮样式 */
.update-btn.has-update {
  background: var(--color-text-primary);
  opacity: 0.9;
}

/* 不可更新时的按钮样式 */
.update-btn:disabled {
  opacity: 0.5;
  background: var(--color-text-quaternary);
}

.update-btn.updating {
  opacity: 0.7;
}