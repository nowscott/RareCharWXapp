<view class="page">
<!-- 自定义导航栏 -->
<view class="custom-nav">
      <view class="nav-title" style="margin-top: {{statusBarHeight}};height:{{titleHeight}}">关于</view>
</view>
  <view class="container">
    <!-- 统计框 -->
    <view class="stats-box">
      <view class="stats-item">
        <text class="stats-num">{{stats.total}}</text>
        <text class="stats-label">全部符号</text>
      </view>
      <view class="stats-item" wx:for="{{stats.topCategories}}" wx:key="category">
        <text class="stats-num">{{item.count}}</text>
        <text class="stats-label">{{item.category}}</text>
      </view>
    </view>

    <!-- 介绍 -->
    <view class="section">
      <text class="section-title">{{intro.title}}</text>
      <text class="section-content">{{intro.content}}</text>
    </view>

    <!-- 使用说明 -->
    <view class="section">
      <text class="section-title">{{guide.title}}</text>
      <view class="guide-list">
        <view class="guide-item" wx:for="{{guide.steps}}" wx:key="*this">
          <text class="guide-text">{{item}}</text>
        </view>
      </view>
    </view>

    <!-- 联系方式 -->
    <view class="section">
      <text class="section-title">{{contact.title}}</text>
      <view class="contact-list">
        <view class="contact-item" 
              wx:for="{{contact.items}}" 
              wx:key="type"
              bindtap="copyContact" 
              data-type="{{item.type}}">
          <image class="contact-icon" src="{{item.icon}}" />
          <text>{{item.text}}</text>
        </view>
      </view>
    </view>

    <!-- 备案信息 -->
    <view class="footer">
      <text class="version">{{footer.version}}</text>
      <text class="icp">{{footer.icp}}</text>
      <text class="copyright">{{footer.copyright}}</text>
    </view>
  </view>
</view> 