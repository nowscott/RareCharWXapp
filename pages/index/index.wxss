/**index.wxss**/
.page {
  background: var(--color-bg-primary);
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.container {
  padding: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}

.search-box {
  padding: 0 24rpx;
  margin-top: 16rpx;
  background: var(--color-bg-primary);
  width: 100%;
  box-sizing: border-box;
}

.search-input {
  background: var(--color-bg-secondary);
  color: var(--color-text-primary);
  height: 72rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.category-scroll {
  margin: 0;
  white-space: nowrap;
  background: var(--color-bg-primary);
  width: 100%;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  position: relative;
  z-index: 10;
}

/* Webkit 浏览器（Chrome、Safari等）隐藏滚动条 */
.category-scroll::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  background: transparent;
}

.category-list {
  display: inline-flex;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  width: fit-content;
  min-width: 100%;
  overflow: visible;
  position: relative;
}

.category-item {
  display: inline-block;
  padding: 8rpx 24rpx;
  margin: 0 8rpx;
  font-size: 28rpx;
  color: var(--color-text-tertiary);
  background: var(--color-bg-secondary);
  border-radius: 20rpx;
  transition: all 0.3s;
  white-space: nowrap;
  box-shadow: var(--shadow);
  flex-shrink: 0;
}

.category-item.active {
  background: var(--color-text-primary);
  color: var(--color-bg-secondary);
  opacity: 0.9;
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-active);
}

.symbols-scroll {
  flex: 1;
  height: 0;
  margin-bottom: 16rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.symbols-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  padding: 0 24rpx;
  transition: opacity 0.2s;
  min-height: 100rpx;
}

.symbols-list.loading {
  opacity: 0.6;
}

.symbols-list.scrolling {
  pointer-events: none;  /* 滚动时禁止交互 */
}

.symbol-item {
  background: var(--color-bg-secondary);
  border-radius: 32rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-shadow: var(--shadow);
  min-height: 160rpx;
  animation: slideDown 0.3s ease-out forwards;
  opacity: 0;
  will-change: transform, opacity;
  transform-origin: top center;
  height: auto;
  overflow: visible;
}

/* 修改为从上往下的动画 */
@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 修改延迟时间计算方式，让上面的项目先出现 */
.symbol-item:nth-child(n) {
  animation-delay: calc(var(--index, 0) * 0.05s);
}

.symbol {
  font-size: 72rpx;
  line-height: 1.2;
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.name {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  text-align: center;
  background: var(--color-bg-primary);
  padding: 8rpx 16rpx;
  margin-top: 8rpx;
  border-radius: 12rpx;
  width: auto;
}

.empty-tip {
  grid-column: span 2;
  text-align: center;
  color: var(--color-text-quaternary);
  padding: 60rpx 0;
  width: 100%;
}

.symbol-detail {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--color-overlay);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 999;
}

.symbol-detail.show {
  opacity: 1;
  visibility: visible;
}

.detail-card {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  transform: translateY(50rpx);
  transition: all 0.3s;
}

.symbol-detail.show .detail-card {
  transform: translateY(0);
}

.detail-symbol {
  font-size: 80rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.detail-category {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  background: #f6f6f6;
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin: 0 auto 30rpx;
}

.detail-desc {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.detail-notes {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.detail-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  border: none;
}

.copy-btn {
  background: #000;
  color: #fff;
}

.copy-with-desc-btn {
  background: #f6f6f6;
  color: #333;
}

.custom-nav {
  width: 100%;
  background: var(--color-bg-secondary);
  display: flex;
  flex-direction: column;
  position: sticky;
  top: 0;
  left: 0;
}

.nav-title {
  font-weight: 500;
  color: var(--color-text-primary);
  line-height: 1;
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  margin-bottom: 8rpx;
  height: 100%;
  font-family: wenkai, system-ui, sans-serif;
}

.search-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: var(--color-bg-secondary);
}

/* 加载动画样式 */
.loading-container {
  grid-column: span 2;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: var(--color-text-quaternary);
  border-radius: 50%;
  animation: bounce 0.5s infinite alternate;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes bounce {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-10rpx);
  }
}
