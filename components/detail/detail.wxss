.symbol-detail {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--color-overlay);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 999;
}

.symbol-detail.show {
  opacity: 1;
  visibility: visible;
}

.detail-card {
  position: relative;
  width: 80%;
  max-height: 72vh;
  background: var(--color-bg-secondary);
  border-radius: 16rpx;
  padding: 16rpx 40rpx;
  transform: translateY(50rpx);
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
}

.symbol-detail.show .detail-card {
  transform: translateY(0);
}

.detail-symbol {
  font-size: 100rpx;
  color: var(--color-text-primary);
}

.detail-category {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  background: var(--color-bg-primary);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 16rpx;
  width: fit-content;
}

.detail-desc {
  font-size: 32rpx;
  color: var(--color-text-primary);
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.detail-notes {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  margin-bottom: 16rpx;
  line-height: 1.2;
  text-align: justify;
  white-space: pre-line;
  word-wrap: break-word;
  height: auto;
  padding-right: 10rpx;
}

.detail-actions {
  display: none;
}

.action-btn {
  width: 60%;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  border: none;
}

.copy-btn {
  background: #000;
  color: #fff;
}

.copy-with-desc-btn {
  background: #f6f6f6;
  color: #333;
}

.detail-at {
  display: none;
}

.copy-icon {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.copy-icon:active {
  opacity: 1;
}

.unicode-code {
  font-size: 20rpx;
  color: var(--color-text-tertiary);
  text-align: center;
  margin: 8rpx 0 16rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 8rpx;
}

.unicode-point {
  background: var(--color-bg-primary);
  color: var(--color-text-secondary);
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
}

.detail-categories {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.detail-category {
  font-size: 24rpx;
  color: #666;
  background: #f6f6f6;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  width: fit-content;
}

.promotion-area {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
}

.promotion-slogan {
  font-size: 20rpx;
  color: var(--color-text-tertiary);
}

.qr-code {
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
}

.detail-card::-webkit-scrollbar {
  display: none;
}

.detail-content {
  padding: 0;
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.detail-content::-webkit-scrollbar {
  display: none;
}

.safe-area-top {
  height: var(--status-bar-height, 88rpx);
  flex-shrink: 0;
}

.safe-area-bottom {
  height: var(--status-bar-height, 88rpx);
  flex-shrink: 0;
} 
