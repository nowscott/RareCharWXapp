.symbol-detail {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 999;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

.symbol-detail.show {
  opacity: 1;
  visibility: visible;
}

.detail-card {
  position: relative;
  width: 80%;
  background: var(--color-bg-secondary);
  opacity: 0.95;
  border-radius: 20rpx;
  padding: 24rpx 40rpx;
  transform: translateY(50rpx);
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
}

.symbol-detail.show .detail-card {
  transform: translateY(0);
}

.detail-symbol {
  font-size: 120rpx;
  color: var(--color-text-primary);
  line-height: 1.2;
  margin-bottom: 16rpx;
}

.detail-category {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  background: var(--color-bg-primary);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 16rpx;
  width: fit-content;
}

.detail-name {
  font-size: 32rpx;
  color: var(--color-text-primary);
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.detail-notes {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  margin-bottom: 16rpx;
  line-height: 1.2;
  text-align: justify;
  white-space: pre-line;
  word-wrap: break-word;
  height: auto;
  padding-right: 10rpx;
}

.detail-actions {
  display: none;
}

.action-btn {
  width: 60%;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  border: none;
}

.copy-btn {
  background: #000;
  color: #fff;
}

.copy-with-name-btn {
  background: #f6f6f6;
  color: #333;
}

.detail-at {
  display: none;
}

.copy-icon {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.copy-icon:active {
  opacity: 1;
}

.unicode-code {
  font-size: 20rpx;
  color: var(--color-text-tertiary);
  text-align: center;
  margin: 8rpx 0 12rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 8rpx;
}

.unicode-point {
  background: var(--color-bg-primary);
  color: var(--color-text-secondary);
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
}

.detail-categories {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.detail-category {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  background: var(--color-bg-primary);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  width: fit-content;
}

.promotion-area {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
}

.promotion-slogan {
  font-size: 20rpx;
  color: var(--color-text-tertiary);
}

.qr-code {
  width: 72rpx;
  height: 72rpx;
  border-radius: 6rpx;
}

.detail-card::-webkit-scrollbar {
  display: none;
}

.detail-content {
  padding: 0;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.detail-content::-webkit-scrollbar {
  display: none;
}

.safe-area-top {
  height: 12rpx;
  flex-shrink: 0;
}

.safe-area-bottom {
  height: 12rpx;
  flex-shrink: 0;
}

@media (prefers-color-scheme: dark) {
  .symbol-detail {
    background: rgba(0, 0, 0, 0.4);
  }

  .detail-card {
    background: rgba(42, 42, 42, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
} 
