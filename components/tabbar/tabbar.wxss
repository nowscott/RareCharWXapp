.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: var(--color-bg-secondary);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1px solid var(--color-border);
}

.tabbar-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tabbar-icon {
  width: 56rpx;
  height: 56rpx;
}

.tabbar-item.active {
  opacity: 1;
}

.tabbar-item:not(.active) {
  opacity: 0.6;
} 