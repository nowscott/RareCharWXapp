<view class="detail-card">
  <text class="detail-symbol">{{symbol.symbol}}</text>
  <text class="detail-category">{{symbol.category}}</text>
  <text class="detail-desc">{{symbol.name}}</text>
  <text class="detail-notes" wx:if="{{symbol.notes}}">{{symbol.notes}}</text>
  <view class="detail-actions">
    <button class="action-btn copy-btn" bindtap="copySymbol">复制符号</button>
    <button class="action-btn copy-with-desc-btn" bindtap="copyWithDesc">复制符号和名称</button>
  </view>
</view> 